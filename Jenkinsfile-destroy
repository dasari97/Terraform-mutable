pipeline {
  agent any
  stages {

    stage('APP') {
      parallel {

        stage('cart') {
          steps {
            dir('cart') {
              sh '''
                git clone https://dasarisaikrishna97@dev.azure.com/dasarisaikrishna97/Roboshop/_git/cart .
                ls -ltr
                cd Terraform-Mutable
                make dev-destroy
              '''
            }
          }
        }

        stage('catalogue') {
          steps {
            dir('catalogue') {
              sh '''
                git clone https://dasarisaikrishna97@dev.azure.com/dasarisaikrishna97/Roboshop/_git/catalogue  .
                ls -ltr
                cd Terraform-Mutable
                make dev-destroy
              '''
            }
          }
        }

        stage('frontend') {
          steps {
            dir('frontend') {
              sh '''
                git clone https://dasarisaikrishna97@dev.azure.com/dasarisaikrishna97/Roboshop/_git/frontend .
                ls -ltr
                cd Terraform-Mutable
                make dev-destroy
              '''
            }
          }
        }

        stage('payment') {
          steps {
            dir('payment') {
              sh '''
                git clone https://dasarisaikrishna97@dev.azure.com/dasarisaikrishna97/Roboshop/_git/payment .
                ls -ltr
                cd Terraform-Mutable
                make dev-destroy
              '''
            }
          }
        }

        stage('shipping') {
          steps {
            dir('shipping') {
              sh '''
                git clone https://dasarisaikrishna97@dev.azure.com/dasarisaikrishna97/Roboshop/_git/shipping .
                ls -ltr
                cd Terraform-Mutable
                make dev-destroy
              '''
            }
          }
        }

        stage('user') {
          steps {
            dir('user') {
              sh '''
                git clone https://dasarisaikrishna97@dev.azure.com/dasarisaikrishna97/Roboshop/_git/user .
                ls -ltr
                cd Terraform-Mutable
                make dev-destroy
              '''
            }
          }
        }

      }
    }

    stage('DB') {
      parallel {
        stage('DB') {
          steps {
            sh '''
            cd Databases; make dev-destroy
            '''
          }
        }
        stage('ALB') {
          steps {
            sh '''
            cd alb; make dev-destroy
            '''
          }
        }
      }
    }

    stage('VPC') {
      steps {
        sh '''
        cd VPC 
        terraform init -backend-config=env/dev-backend.tfvars -no-color
        terraform destroy -target=aws_nat_gateway.ngw -var-file=env/dev.tfvars  -auto-approve
        '''
      }
    }

  }

  post {
    always {
      cleanWs()
    }
  }

}